<div class="container p-4 my-auto">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card shadow border-0 text-center mt-4">
                <div class="card-body pb-2">
                    <h5>Crear cuentas COP</h5>
                    <p class="text-muted">Registra una nueva cuenta COP</p>
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" maxlength="50" name="nombre" required placeholder="Nombre(s)" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" maxlength="50" name="apellidos" required placeholder="Apellidos" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="email" maxlength="50" name="username" required placeholder="Correo electrónico" class="form-control">
                        </div>
                        <div class="form-group text-left">
                            <input type="password" maxlength="50"  name="password" required placeholder="Contraseña" class="form-control">
                            <small class="text-muted ml-1">Usa sólo letras (No caracteres especiales ni números)</small>
                        </div>
                        <div class="form-group">
                            <select class="custom-select" disabled>
                                <option value="Comprador" selected>COP</option>
                            </select>
                        </div>
                        <div class="form-group text-left">
                            <button class="btn btn-warning px-4">
                                Registrar COP
                            </button>
                        </div>
                    </form>
                    {{> message}}

                </div>
            </div>
        </div>
    </div>
</div>