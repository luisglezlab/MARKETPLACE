                            <input type="text" maxlength="50" value="{{tienda.nombre_tienda}}" class="form-control" required name="nombre_tienda" placeholder="Nombre de la tienda" autofocus/>
                        </div>
                        <div class="form-group">
                            <textarea name="description" maxlength="80" rows="2" required class="form-control" placeholder="DescripciÃ³n de la tienda">{{tienda.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" maxlength="100" value="{{tienda.url}}" class="form-control" required name="url" placeholder="URL"/>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Editar tienda
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>